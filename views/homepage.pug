doctype html
html
  head
    title= `${title} | ${h.siteName}`
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/connect.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://fonts.googleapis.com/css?family=Raleway:300&display=swap" rel="stylesheet")
  body
    div.container
        section.card
            h1 Connect
            form#connect-form.connect-form
                section.nameRow
                    input#firstName(type="text", name="First Name" placeholder="First Name")
                    input#lastName(type="text", name="Last Name" placeholder="Last Name")
                select#courseNumber
                  option(value="CS1114") CS1114
                  option(value="CS2124") CS2124
                  option(value="CS3613") CS3613
                button#submit Submit
    script(src="/js/connect.js")